.wrapper

  = render 'shared/side_bar'

  .chat-main
    .main-header
      .left-box
        .left-box__title
          グループ①
        %ul.left-box__members
          Member:
          %li.member
            A子
          %li.member
            B子
          %li.member
            C子
      .right-box
        .right-box__button
          Edit

    .messages
      = render @messages
   
    .form
      = form_for [@group, @message] do |f|
        .form__message
          .form__message__box
            = f.text_field :content, class: 'form__message__box__text', placeholder: 'type a message'
            = f.label :image, class: 'form__message__box__image' do
              = fa_icon 'image', class: 'icon'
              = f.file_field :image, class: 'hidden'
          = f.submit 'Send', class: 'form__message__submit'

